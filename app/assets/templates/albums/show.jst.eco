<h1>Album:</h1>

<p>Name: <%= @album.get('name') %></p>
<p>Year: <%= @album.get('year') %></p>

<h3>Songs:</h3>
<ul>
<% for song in @songs.models: %>
  <li class="song_<%= song.get('id') %>">
    <a href="#artists/<%= @artist_id %>/albums/<%= song.get('album_id') %>/songs/<%= song.get('id') %>"><%= song.get('n_album') %>. <%= song.get('name') %> (<%= song.get('duration')%>)</a>
  </li>
<% end %>
</ul>

<br/>
<a href="javascript:history.back()">Back</a>